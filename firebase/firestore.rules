rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function userRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isRole(r) {
      return request.auth != null && userRole() == r;
    }

    function isAnyAdmin() {
      return request.auth != null && userRole() in ['super_admin', 'ketua', 'wakil'];
    }

    function isPengurus() {
      return request.auth != null && userRole() in [
        'super_admin', 'ketua', 'wakil', 'sekretaris', 'bendahara', 'sie'
      ];
    }

    match /users/{uid} {
      allow read: if request.auth != null && (uid == request.auth.uid || isAnyAdmin());
      allow create: if request.auth != null;
      allow update: if request.auth != null && (uid == request.auth.uid || isAnyAdmin());
      allow delete: if isRole('super_admin');
    }

    match /activities/{id} {
      allow read: if true;
      allow create: if isRole('super_admin') || isRole('sekretaris') || isRole('sie');
      allow update: if isRole('super_admin')
                    || isRole('sekretaris')
                    || (isRole('ketua') && request.resource.data.status in ['approved', 'done'])
                    || (isRole('wakil') && request.resource.data.status in ['reviewed', 'rejected']);
      allow delete: if isAnyAdmin();
    }

    match /financial_records/{id} {
      allow read: if request.auth != null;
      allow create, update, delete: if isRole('super_admin') || isRole('bendahara');
    }

    match /announcements/{id} {
      allow read: if true;
      allow create, update, delete: if isPengurus();
    }

    match /albums/{id} {
      allow read: if true;
      allow create, update, delete: if isPengurus();
    }

    match /galleries/{id} {
      allow read: if true;
      allow create, update, delete: if isPengurus();
    }
  }
}
