rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    match /albums/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /activities/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
